{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "rewrites": [
    {
      "source": "/tv",
      "destination": "/index.html"
    },
    {
      "source": "/tv/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/painel",
      "destination": "/painel.html"
    },
    {
      "source": "/",
      "destination": "/painel.html"
    },
    {
      "source": "/(.*)",
      "destination": "/painel.html"
    }
  ]
}